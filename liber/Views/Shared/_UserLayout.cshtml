    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Usuariotemp/")css/common.css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Usuariotemp/")css/style2.css" />

   

</head>
<body>

    <header id="header">
        <!--header-->
        <div class="header_top">
                      <ul id="Menu">
                    
                          <li class="Menu"><a id="Eventos" href="@Url.Action("IndexUsuario","Usuario")">Home</a></li>
                        <li class="Menu" ><a id="Eventos" href="@Url.Action("Eventos","Usuario")">Eventos</a></li>
                        <li class="Menu"><a id="Trivias" class="active" href="@Url.Action("trivias","Usuario")">Trivias</a></li>
                        <li class="Menu" ><a id="Explorar" href="@Url.Action("ListadoLibroNoEncontrado","Libro")">Explorar</a></li>
                        <li class="Menu"> <a id="Micuenta" href="@Url.Action("MiCuenta","Usuario")">Mi cuenta</a></li>
                        
                          <li>
                              
                                  @* SEARCH *@
                                  <div id="Search" onKeyPress="return myFunction(event)">

                                      <form action="@Url.Action("search", "Usuario")" method="post" id="form01">
                                          @{   Libros libro = new Libros();
                                              @Html.TextBoxFor(x => libro.ingresado, new { @class = "Cuadrobusqueda", placeholder = "Buscar" })

                                          }
                                      </form>
                                      @Scripts.Render("~/bundles/jquery")
                                      <script>

           //Press enter
                function myFunction(e) {
                    //                ^^^^^^^^^^^  <<<<--------------------------------
               if((e && e.keyCode == 13) || e == 0) {
                document.forms.form01.submit();
                 document.forms.form01.fname.value = ""; // could be form01.reset as well
               }
                }
           //Random color background search
                $(document).ready(function () {
                    //                ^^^^^^^^^^^  <<<<--------------------------------
                    var colors = ["#eb6e80", "#008f95", "#e98000", "#e24e42"];
                    var rand = Math.floor(Math.random() * colors.length);
                    $('#Search').css("background-color", colors[rand]);

                });
                                      </script>
                                      @RenderSection("scripts", required: false)
                                  </div>
                              
                          </li>
                     </ul>
                 
     
        
        </div>
  



        @RenderSection("Calendar", false)

    </header><!--/header-->
    @* java del search *@
    <script src="~/Content/Usuariotemp/js/demo9.js"></script>
    @* java del theme *@
