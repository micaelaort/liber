    <script>document.documentElement.className = 'js';</script>
    @* Conectores del theme
    <link href="@Url.Content("~/Content/Usuariotemp/")css/bootstrap.min.css" rel="stylesheet">*@
    <link href="@Url.Content("~/Content/Usuariotemp/")css/font-awesome.min.css" rel="stylesheet">
