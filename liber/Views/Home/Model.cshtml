@using liber.Models
@model Usuarios
@{
    ViewBag.Title = "Model";
    Layout = "~/Views/Shared/_mytemplatepagprincipal.cshtml";
}
<HEAD>

    <style>
    body {
       
        position: relative;
        background-position: center;
        background-repeat:no-repeat;
        background-size:100% ;
    }
    .Etiqueta {
    text-align:center;
    }
    </style>
</HEAD>





<body  background="~/content/imagen/login.jpg">  
    
      <form action=@Url.Action("Model","Home") method="post">
        <div>

            <header class="masthead">

                <h3 class="Etiqueta">Iniciar sesión</h3>
             
            </header>
            <div class="EtiquetasValidaciones">
                <h3>@ViewBag.mensaje</h3>
                <label class="etiquetas">Usuario</label>@Html.ValidationMessageFor(x => x.user, null, new { @class = "validaciones" })
            </div>
            @Html.TextBoxFor(x => x.user, new { @class = "texto", placeholder = "Ingrese usuario" })



            <div class="EtiquetasValidaciones">
                <label class="etiquetas">Contraseña</label>@Html.ValidationMessageFor(x => x.contraseña, null, new { @class = "validaciones" })
            </div>
            @Html.TextBoxFor(x => x.contraseña, new { @class = "texto", placeholder = "Ingrese contraseña", type = "password" })
            </div>
     
        <button type="submit" onclick="onsave()">Iniciar Sesión</button>
</form>


</body>