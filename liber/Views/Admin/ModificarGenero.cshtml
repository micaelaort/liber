@using liber.Models
@model Generos
@{
    ViewBag.Title = "ModificarGenero";
    Layout = "~/Views/Shared/_AdminLayoutcshtml.cshtml";
}

<h2>ModificarGenero</h2>

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Modificar Género

                </h1>


                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>





                <div id="FormBanner">
                    @using (Html.BeginForm("ModificarGenero", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

                    {
                        <h3>@ViewBag.Error </h3>
                        <header class="masthead"></header>
                        <div class="EtiquetasValidaciones">
                            <h3 id="ErrorFecha">@ViewBag.mensaje</h3>
                            <label class="etiquetas">Ingrese un género</label>
                        </div>
                        @Html.HiddenFor(x => x.id)
                        @Html.TextBoxFor(x => x.nombre, new { @class = "texto", placeholder = "Ingrese genero" })








                        <button type="submit" onclick="onsave()">Modificar Genero</button>

                    }
                </div>


            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
