@using liber.Models
@model Trivias

@{
    ViewBag.Title = "VerPreguntas";
    Layout = "~/Views/Shared/_AdminLayoutcshtml.cshtml";
}

<h2>VerPreguntas</h2>

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Tables
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-table"></i> Tables
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-6">
                <h2 id="TituloBanner">Trivias</h2>

                <a class="btn btn-lg btn-default" href=@Url.Action("AgregarPregunta","Admin")>Agregar Pregunta</a>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Pregunta</th>
                                <th>Respuesta1</th>
                                <th>Respuesta2</th>
                                <th>Respuesta3</th>
                                <th>Correcto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @*
                                como hacer que aparezca un objeto de una clase en una tabla*@

                            @{foreach (Trivias triv in (ViewBag.lista))
                                {
                                    <tr class="fila">

                                        <td>@triv.pregunta</td>
                                        <td>@triv.respuesta1</td>
                                        <td>@triv.respuesta2</td>
                                        <td>@triv.respuesta3</td>
                                        <td>@triv.correcto</td>

                                        <td>
                                            <!--lo que ve el usuario/view/controller/parametro-->
                                            @Html.ActionLink("Modificar Pregunta", "ModificarPregunta", "Admin", new { id = triv.idpregunta}, null)
                                        </td>

                                        <td>
                                            <!--lo que ve el usuario/view/controller/parametro-->

                                            @Html.ActionLink("Eliminar", "EliminarPregunta", "Admin", new { id = triv.idpregunta }, null)

                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

