@using liber.Models
@model Trivias
@{
    ViewBag.Title = "AgregarTrivia";
    Layout = "~/Views/Shared/_AdminLayoutcshtml.cshtml";
}

<head>
    <style>
        #ErrorFecha {
            color: red;
        }
    </style>
</head>
<h2>AgregarBanner</h2>


<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Agregar Trivia

                </h1>


                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>





                <div id="FormBanner">
                    @using (Html.BeginForm("AgregarTrivia", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))

                    {<h3 id="ErrorFecha">@ViewBag.mensaje</h3>
                        <header class="masthead"></header>
                        <div class="EtiquetasValidaciones">
                          <label class="etiquetas">Titulo</label>
                        </div>
                        @Html.TextBoxFor(x => x.nombre, new { @class = "texto", placeholder = "Ingrese titulo" })

                        
                        @Html.TextBoxFor(x => x.imagen, new { type = "file", @class = "texto", placeholder = "Ingrese imagen" })

                        <button type="submit" onclick="onsave()">Agregar Trivia</button>

                    }
                </div>


            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->


