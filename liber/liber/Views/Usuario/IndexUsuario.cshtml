@using liber.Models

@{
    ViewBag.Title = "IndexUsuario";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<head>
    <style>
        .estrellas{
            width:15%;
        }
    </style>
    	
</head>
<body>

  

    <section id="slider">
        <!--slider-->

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">

                                <div class="col-sm-6">

                            @{foreach (Banners banner in (ViewBag.listBanner))
                                {
                                    <img src="@Url.Content("~/Content/Admintemp/banner/")@banner.Imagen" id="img1" class="girl img-responsive" alt="" />
                                }
                                }
                                </div>
                            </div>
                          

                           

                        </div>

                        <a href.
                           ="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>

    </section><!--/slider-->

    <section id="libros">
        @*Lista de libros que contenga una minilista con detalles del libro*@
        
        <table>



            @{
