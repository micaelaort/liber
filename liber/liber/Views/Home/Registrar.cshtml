@using liber.Models
@model Usuarios
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_mytemplatepagprincipal.cshtml";
}



<HTML>
<HEAD>
    
    <style>
        body {
        background-image:url("~/Content/mytemplatepagprincipal/img/bg-cta.jpg") -webkit-linear-gradient(to left, #7b4397, #dc2430);
        background-size:cover;
        background: #fdcc52;       
        background: -webkit-linear-gradient(#fdcc52, #fdc539);
        background: linear-gradient(#fdcc52, #fdc539); 
        position: relative;
        background-position: center;
        }
        
        .texto {
        text-align:center;
        width:300px;
        height:45px;
        margin:0 auto;
        }
        
        .etiquetas,.texto {
             display: block;
        }
        .etiquetas {
        text-align:center;
        }
        .validaciones {
       color: #f742d0;
       display:block;
       margin-top:20px;
            }

         #validacion {
        display:inline-block;
        margin:0 auto;
        float:right;
        margin-top:-60%;
        padding:0px;
        margin:0px;
        }

        
    </style>
</HEAD>

<body>
    <form  action="@Url.Action("Registrar", "Home")" method="post">
        <div>
            
            <h3 class="etiquetas">Registración</h3>
            <h5 class="etiquetas"><b>Todos los campos son obligatorios</b></h5>
            <section id="registracion">
                <div id="textos">
                    <label class="etiquetas">Nombre</label>
                    @Html.TextBoxFor(x => x.nombre, new { @class = "texto", placeholder = "Ingrese nombre" })

                    <label class="etiquetas">Apellido</label>
                    @Html.TextBoxFor(x => x.apellido, new { @class = "texto", placeholder = "Ingrese apellido" })


                    <label class="etiquetas">Usuario</label>
                    @Html.TextBoxFor(x => x.user, new { @class = "texto", placeholder = "Ingrese usuario" })


                    <label class="etiquetas">Contraseña</label>
                    @Html.TextBoxFor(x => x.contraseña, new { @class = "texto", placeholder = "Ingrese contraseña", type = "password" })


                    <label class="etiquetas">Confirmación de la contraseña</label>
                    @Html.TextBoxFor(x => x.confirmaciondecontraseña, new { @class = "texto", placeholder = "Ingrese contraseña", type = "password" })

                    <label class="etiquetas" for="email">Email </label>
                    @Html.TextBoxFor(x => x.email, new { type = "email", @class = "texto", placeholder = "Ingrese email" })
                </div>

                <div id="validacion">
                    @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "validaciones" })
                    @Html.ValidationMessageFor(x => x.apellido, null, new { @class = "validaciones" })
                    @Html.ValidationMessageFor(x => x.user, null, new { @class = "validaciones" })
                    @Html.ValidationMessageFor(x => x.contraseña, null, new { @class = "validaciones" })
                    @Html.ValidationMessageFor(x => x.confirmaciondecontraseña, null, new { @class = "validaciones" })
                    @Html.ValidationMessageFor(x => x.email, null, new { @class = "validaciones" })
                </div>
          
            </section>
         
           
            <section>
                <input id="acceptTerms" name="acceptTerms" type="checkbox" class="required"> <label for="acceptTerms">Estoy de acuerdo con los términos y condiciones</label>
            </section>
            <button type="submit" onclick="onsave()">Registrarse</button>

        </div>
    </form>
    </BODY>
</HTML>