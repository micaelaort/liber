@using liber.Models
@model Usuarios

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mytemplatepagprincipal.cshtml";
}


<body id="page-top" ng-app="">
    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-toggleable-md navbar-light" id="mainNav">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarExample" aria-controls="navbarExample" aria-expanded="false" aria-label="Toggle navigation">
            Menu <i class="fa fa-bars"></i>
        </button>
        <div class="container">
            <a class="navbar-brand" href="#page-top">LIBER</a> 
            <div class="collapse navbar-collapse" id="navbarExample">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#download">Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Características</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contacto</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead">
        <div class="container">
            <div class="row">
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <h1>Hazte amigos a través del mágico mundo de los libros</h1>
                           
                            
                            @* Empieza el codigo del form modal login *@
                            <a href=@Url.Action("Model","Home")
                                class="btn btn-outline btn-xl" onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Iniciar sesión</button>
                             
                            </a>

                            @* Termina el codigo del form modal login *@
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="device-container">
                        
                                         <div>
                                    <img src="@Url.Content("~/Content/mytemplatepagprincipal/")img/monitor.png" class="monitor" alt="">
                                    <div class="device">
                                        <div class="screen">
                                            <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                            <!-- <img src="img/demo-screen-1.jpg" class="img-fluid" alt=""> -->
                                        </div>
                                        <div class="button">
                                            <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section class="download bg-primary text-center" id="download">
        <div class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h2 class="section-heading">Nosotros!</h2>
                    <p>Somos una página qne trata de fomentar la cultura y la amistad</p>
                    <div class="badges">

                        <img src="@Url.Content("~/Content/mytemplatepagprincipal/")img/libro.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="features" id="features">
        <div class="container">
            <div class="section-heading text-center">
                <h2>Ilimitadas características, Ilimitada diversión</h2>
                <p class="text-muted">Descubre lo que puedes hacer con LIBER!</p>
                <hr>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="device-container">
                        
                                   <div>
                                    <img src="@Url.Content("~/Content/mytemplatepagprincipal/")img/monitor.png" class="monitor" id="monitordeabajo" alt="">
                                    <div class="device">
                                        <div class="screen">
                                            <!-- Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! -->
                                            <!-- <img src="img/demo-screen-1.jpg" class="img-fluid" alt=""> -->
                                        </div>
                                <div class="button">
                                    <!-- You can hook the "home button" to some JavaScript events or just remove it -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icon-user text-primary"></i>
                                    <h3>Autores</h3>
                                    <p class="text-muted">Sigue las obras de tus autores favoritos</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icon-heart text-primary"></i>
                                    <h3>Me encanta</h3>
                                    <p class="text-muted">Evalua los libros</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icon-question text-primary"></i>
                                    <h3>Trivias</h3>
                                    <p class="text-muted">Encuentra las trivias de tus historias favoritas</p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="feature-item">
                                    <i class="icon-calendar text-primary"></i>
                                    <h3>Eventos</h3>
                                    <p class="text-muted">Enterate los últimos eventos de la comunidad literaria</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="cta">
        <div class="cta-content">
            <div class="container">
                <h2>Para de esperar.<br>Empieza a imaginar.</h2>
                <a href=@Url.Action("Registrar","Home") class="btn btn-outline btn-xl">Registrate!</a>
            </div>
        </div>
        <div class="overlay"></div>
    </section>
    <section class="contact bg-primary" id="contact">
        <div class="container">
            <h2>Nosotros <i class="icon-heart fa fa-heart"></i> a los nuevos amigos!</h2>
            
            <ul class="list-inline list-social">
                <li class="list-inline-item social-twitter">
                    <a href="#"><i class="icon-social-twitter fa fa-twitter"></i></a>
                </li>
                <li class="list-inline-item social-facebook">
                    <a href="#"><i class="icon-social-facebook fa fa-facebook"></i></a>
                </li>
                <li class="list-inline-item social-google-plus">
                    <a href="#"><i class="icon-social-google fa fa-google-plus"></i></a>
                </li>
            </ul>
        </div>
    </section>
    <footer>
        <div class="container">
            <p>&copy; 2017 Start Bootstrap. All Rights Reserved.</p>
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a href="#">Privacy</a>
                </li>
                <li class="list-inline-item">
                    <a href="#">Terms</a>
                </li>
                <li class="list-inline-item">
                    <a href="#">FAQ</a>
                </li>
            </ul>
        </div>
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Content/mytemplatepagprincipal/")vendor/jquery/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplatepagprincipal/")vendor/tether/tether.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplatepagprincipal/")vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="@Url.Content("~/Content/mytemplatepagprincipal/")vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="@Url.Content("~/Content/mytemplatepagprincipal/")js/new-age.min.js"></script>
</body>


